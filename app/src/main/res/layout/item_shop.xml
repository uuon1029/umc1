<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/select_color"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="15dp">

<!--    <FrameLayout-->
<!--        android:id="@+id/background_frame_fl"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="600dp"-->
<!--        android:background="@drawable/round"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"/>-->

    <ImageView
        android:id="@+id/shopitem_image_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pencil_alt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/shopitem_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shop리사이클러뷰연습"
        android:textSize="20sp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/shopitem_image_iv"/>

    <TextView
        android:id="@+id/shopitem_body_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용"
        android:textSize="15sp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/shopitem_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/shopitem_image_iv"/>

    <ImageView
        android:id="@+id/shopitem_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/home"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>